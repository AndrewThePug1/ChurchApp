<% layout('layouts/boilerplate') %>
<%- include('./navbar') %>

<div class="row">
  <h1 class="text-center">Filter Songs</h1>
  <h4 class="text-center">*Minimum of one field must have input*</h4>

  <div class="col-6 offset-3">
    <form action="/songs/filter" method="post" onsubmit="validateForm(event)">
      <label class="form-label" for="title">Title:</label><br>
      <div class="mb-3">
        <input class="form-control" type="text" id="title" name="title" value="">
      </div>
      
      <label class="form-label" for="language">Language:</label><br>
      <div class="mb-3">
        <select class="form-control" id="language" name="language">
          <option value="">Select a Language</option>
          <option value="English">English</option>
          <option value="Spanish">Spanish</option>
        </select>
      </div>
      
      <label class="form-label" for="original_artist">Original Artist:</label><br>
      <div class="mb-3">
        <input class="form-control" type="text" id="original_artist" name="original_artist" value="">
      </div>
      
      <label class="form-label" for="singerOrType">Singer or Type:</label><br>
      <div class="mb-3">
        <select class="form-control" id="singerOrType" name="singerOrType">
          <option value="">Select a Singer/Type</option>
          <% singerOrTypes.forEach(function(singerOrType) { %>
            <option value="<%= singerOrType %>"><%= singerOrType %></option>
          <% }); %>
        </select>
      </div>
      
      <label class="form-label" for="theme">Theme:</label><br>
      <div class="mb-3">
        <select class="form-control" id="theme" name="theme">
          <option value="">Select a Theme</option>
          <% themes.forEach(function(theme) { %>
            <option value="<%= theme %>"><%= theme %></option>
          <% }); %>
        </select>
      </div>
      
      <div class="mb-3">
        <input type="submit" value="Filter">
      </div>
    </form>
  </div>
</div>
