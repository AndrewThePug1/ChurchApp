<% layout('layouts/boilerplate') %>

<style>
  .home-heading {
    font-family: 'Roboto', sans-serif;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .home-message {
    font-family: 'Roboto', sans-serif;
    font-style: italic;
    letter-spacing: 1px;
    color: #555;
  }
</style>

<div class="text-center">
  <% if (username) { %>
    <h1 class="home-heading">Hello <%= username %></h1>
  <% } %>

  <h1 class="home-heading">Find SCC Fort Worth's Songs</h1>
  <p class="home-message">Explore our collection of worship songs</p>
</div>
